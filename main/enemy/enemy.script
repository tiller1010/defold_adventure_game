function init(self)
	self.movement_vector = vmath.vector3()
	
	self.can_go_north = false
	self.can_go_south = false
	self.can_go_east = false
	self.can_go_west = false

	self.north_tracks = {}
	self.south_tracks = {}
	self.east_tracks = {}
	self.west_tracks = {}

	self.frozen = false
end

